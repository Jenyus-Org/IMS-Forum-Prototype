{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "Comment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "body": {
      "type": "richtext"
    },
    "parentComment": {
      "model": "comment",
      "via": "comments"
    },
    "comments": {
      "collection": "comment",
      "via": "parentComment"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "comments"
    },
    "parentTutorial": {
      "model": "tutorial",
      "via": "comments"
    },
    "parentPost": {
      "via": "comments",
      "model": "post"
    }
  }
}
