{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "comments": {
      "collection": "comment",
      "via": "parent_post"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "title": {
      "type": "string"
    }
  }
}
